@using ParksClient.Models;
@model List<Park>;
<h1>All State and National Parks:</h1>

<ol>
@foreach (Park park in Model)
{
    <ul>
        <li>@Html.ActionLink(@park.Name, "Details", "Park", new Park {ParkId = park.ParkId, State = park.State, Land = park.Land})</li>
    </ul>
    <br>
}
</ol>

<button class="btn btn-success">@Html.ActionLink("Add a Park", "Create", "Park",  new {style = "color:white"})</button>
